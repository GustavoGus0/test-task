generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String
  status      String
  priority    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
}

model User {
  id         String   @id @default(uuid())
  login      String   @unique
  firstName  String
  lastName   String
  patronymic String?
  password   String
  createdAt  DateTime @default(now())
}
